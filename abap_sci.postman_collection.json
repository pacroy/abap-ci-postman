					"protocol": "{{protocol}}",
					"host": [
						"{{host}}"
					],
					"port": "{{port}}",
					"path": [
						"sap",
						"bc",
						"adt",
						"atc",
						"worklists",
						"{{worklist_id}}"
					],
					"query": [
						{
							"key": "includeExemptedFindings",
							"value": "false",
							"equals": true
						}
					]
				}
			},
			"response": []
		}
